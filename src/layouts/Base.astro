---
import TwSizeIndicator from "@/components/TwSizeIndicator.astro";
import config from "@/config/config.json";
import theme from "@/config/theme.json";
import { plainify } from "@/lib/utils/textConverter";
import Footer from "@/partials/Footer.astro";
import Header from "@/partials/Header.astro";
import "@/styles/main.css";

// Carga del contenedor del carrito (modal/drawer) para que el botón funcione.
// Si no lo usas aquí, no pasa nada —pero no lo quito para no romper nada.
import Cart from "@/layouts/functional-components/cart/Cart.astro";

import { AstroFont } from "astro-font";

// ====== META ======
const { title, meta_title, description, image, noindex } = Astro.props;
const site = config?.site ?? {};
const metaTitle =
  meta_title ??
  title ??
  site?.title ??
  "Aurora Devs";
const metaDesc =
  description ??
  site?.description ??
  "Cursos online de skate: aprende, progresa y conéctate con la comunidad.";
const metaImage = image ?? site?.meta_image;
const lang = site?.lang ?? "es";
const canonical = Astro.url.href;
---

<!DOCTYPE html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{plainify(metaTitle)}</title>
    <meta name="description" content={plainify(metaDesc)} />

    <link rel="canonical" href={canonical} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={plainify(metaTitle)} />
    <meta property="og:description" content={plainify(metaDesc)} />
    {metaImage && <meta property="og:image" content={metaImage} />}

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={plainify(metaTitle)} />
    <meta name="twitter:description" content={plainify(metaDesc)} />
    {metaImage && <meta name="twitter:image" content={metaImage} />}

    {noindex && <meta name="robots" content="noindex,nofollow" />}

    <!-- Tema claro/oscuro -->
    <meta name="theme-color" content="#ffffff" media="(prefers-color-scheme: light)" />
    <meta name="theme-color" content="#000000" media="(prefers-color-scheme: dark)" />

    <!-- Overrides globales -->
    <link rel="stylesheet" href="/styles/overrides.css" />

    <!-- Fuentes (respetando tu theme; si no hay fuentes definidas no se carga nada) -->
    {
      (() => {
        const pf = theme?.fonts?.font_family?.primary ?? "";
        const sf = theme?.fonts?.font_family?.secondary ?? "";
        const fontPrimary = pf ? pf.split(",")[0]?.replace(/['"]/g, "") : undefined;
        const fontSecondary = sf ? sf.split(",")[0]?.replace(/['"]/g, "") : undefined;

        return (fontPrimary || fontSecondary) ? (
          <AstroFont
            config={[
              ...(fontPrimary ? [{ name: fontPrimary, src: [] }] : []),
              ...(fontSecondary ? [{ name: fontSecondary, src: [] }] : []),
            ]}
            display="swap"
            preload={false}
          />
        ) : null;
      })()
    }
  </head>

  <body class:list={{ 'route-cursos': Astro.url.pathname.startsWith('/products') }}>
    <TwSizeIndicator />

    <!-- Cabecera (ya es sticky/translúcida en tu componente) -->
    <Header />

    <main id="main-content">
      <slot />
    </main>

    <Footer />

    {/*
      Empujamos SOLO la página de /products para que el header sticky no tape nada.
      Puedes ajustar --header-height si tu cabecera mide más.
    */}
    {
      Astro.url.pathname.startsWith("/products") && (
        <style is:global>
          :root{ --header-height: 64px; }
          main{ padding-top: calc(var(--header-height) + 24px) !important; }
          @media (max-width:768px){
            main{ padding-top: calc(var(--header-height) + 36px) !important; }
          }
        </style>
      )
    }
  </body>
</html>
