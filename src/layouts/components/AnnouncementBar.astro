---
import CurrencyMenu from "@/layouts/components/CurrencyMenu.astro";

const icons = [
  { alt: "Instagram", src: "/icons/instagram.png", href: "https://www.instagram.com/obbask8/" },
  { alt: "Facebook",  src: "/icons/facebook.png",  href: "https://www.facebook.com/people/OBBA/100092390311434/" },
  { alt: "TikTok",    src: "/icons/tiktok.png",    href: "https://www.tiktok.com/@obba?lang=es" },
  { alt: "YouTube",   src: "/icons/youtube.png",   href: "https://www.youtube.com/@Obbask8" },
];
---

<div class="w-full">
  <div
    class="mx-auto mt-1 mb-1 w-[95%] md:w-[92%] rounded-full px-4 sm:px-6 py-2
           bg-[#86C39F] text-white flex items-center gap-3"
  >
    <!-- Redes a la izquierda -->
    <div class="hidden sm:flex items-center gap-3">
      {icons.map((i) => (
        <a href={i.href} target="_blank" rel="noopener" aria-label={i.alt}>
          <img src={i.src} alt={i.alt} class="w-4 h-4 object-contain" loading="lazy" />
        </a>
      ))}
    </div>

    <!-- Mensaje centrado -->
    <div class="flex-1 text-center text-[13px] sm:text-[14px] leading-none">
      <a href="/products" class="underline underline-offset-2 hover:opacity-90">
        ¿No sabes qué curso elegir? Mira nuestros cursos →
      </a>
    </div>

    <!-- Moneda a la derecha (estilo integrado en barra) -->
    <div class="shrink-0">
      <CurrencyMenu context="bar" />
    </div>
  </div>
</div>
